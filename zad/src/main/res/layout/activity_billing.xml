<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainscroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:text="@string/premiumBenefits"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_secondary" />

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/nomyshetteX"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="@string/Premium_line2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Purple_Deep" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="16dp"
                android:text="@string/nike"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/pink_reverse" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/LinearLayout01"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="@string/Premium_line3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Purple_Deep" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="16dp"
                android:text="@string/nike"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/pink_reverse" />
        </LinearLayout>
<LinearLayout
            android:id="@+id/nomyshetteX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/nomyshette"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="@string/Premium_line4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Purple_Deep" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="16dp"
                android:text="@string/nike"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/pink_reverse" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nomyshette"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="@string/Premium_line1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Purple_Deep" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="16dp"
                android:text="@string/nike"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/pink_reverse" />
        </LinearLayout>

        <Button
            android:id="@+id/payButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout02"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/keyline_16dp"
            android:background="@drawable/btn_yellow"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/lock_open"
            android:onClick="onPayButtonClicked"
            android:padding="8dp"
            android:text="@string/getPremium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout02"
            android:layout_margin="@dimen/keyline_16dp"
            android:background="@color/white"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="@string/only_1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/green_blue" />
    </RelativeLayout>

</ScrollView>