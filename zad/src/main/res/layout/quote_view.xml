<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/Purple_Deep_Clicked" >

        <ImageView
            android:id="@+id/Up_button"
            style="@style/ZadActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding"
            android:paddingRight="@dimen/abc_action_bar_icon_vertical_padding"
            android:src="@drawable/icon_actionbar_back_button" />

        <ImageView
            android:id="@+id/share_button"
            style="@android:style/Widget.Holo.Light.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/Quote_overFlow"
            android:clickable="true"
            android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding"
            android:paddingRight="@dimen/abc_action_bar_icon_vertical_padding"
            android:src="@drawable/icon_actionbar_share" />
        <com.facebook.share.widget.ShareButton
            android:id="@+id/fb_share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/share_button"
            android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding"
            android:paddingRight="@dimen/abc_action_bar_icon_vertical_padding"
             />

        <ImageView
            android:id="@+id/quote_copy"
            style="@android:style/Widget.Holo.Light.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fb_share_button"
            android:clickable="true"
            android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding"
            android:paddingRight="@dimen/abc_action_bar_icon_vertical_padding"
            android:src="@drawable/ic_ab_copy" />

        <ImageView
            android:id="@+id/Quote_overFlow"
            style="@android:style/Widget.Holo.Light.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding"
            android:paddingRight="@dimen/abc_action_bar_icon_vertical_padding"
            android:src="@drawable/menu_overflow" />

        <com.app.zad.helper.FlipImageView
            android:id="@+id/Fav_button"
            style="@style/ZadActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/quote_copy"
            android:clickable="true"
            android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding"
            android:paddingRight="@dimen/abc_action_bar_icon_vertical_padding"
            android:scaleType="center"
            android:src="@drawable/ic_ab_fav"
            app:flipDrawable="@drawable/ic_ab_fav_clicked"
            app:flipDuration="500"
            app:flipInterpolator="@android:anim/anticipate_overshoot_interpolator"
            app:flipRotations="x|y" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myQuoteLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/Purple_Deep_soft"
        android:gravity="center" >

        <TextView
            android:id="@+id/text_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:alpha="0.2"
            android:clipToPadding="true"
            android:gravity="center"
            android:padding="45dp"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey_light"
            android:textSize="33sp" />

        <ScrollView
            android:id="@+id/textViewx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="45dp"
            android:clipToPadding="true" >

            <TextView
                android:id="@+id/Quote_Main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/Quote1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Purple_Deep_Black_fa7m"
                android:textSize="33sp"
                 />
        </ScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/keyline_16dp"
            android:textColor="@color/yellow"
            android:textSize="45dp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="@dimen/keyline_16dp"
            android:textColor="@color/yellow"
            android:textSize="45dp"
            android:typeface="serif" />

        <RelativeLayout
            android:id="@+id/cat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" >

            <TextView
                android:id="@+id/Category_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/cat_placholdeer"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/Category_Text"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="@string/circle_symbol"
                android:textColor="@color/yellow"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/textView8798"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/Category_Text"
                android:paddingRight="8dp"
                android:text="@string/circle_symbol"
                android:textColor="@color/yellow"
                android:textSize="7sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_weight="2.2"
        android:background="@color/Purple_Deep_Black_fa7m"
        android:gravity="right|center" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_toLeftOf="@+id/Author_Main_Pic"
            android:background="@color/Purple_Deep_Black_fa7m"
            android:gravity="right"
            android:paddingBottom="@dimen/keyline_8dp"
            android:paddingLeft="@dimen/keyline_8dp"
            android:paddingTop="@dimen/keyline_8dp" >

            <TextView
                android:id="@+id/Author_Main_Bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:focusable="true"
                android:gravity="top|right"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/loading"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text__inverse" />
        </ScrollView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/Purple_Deep_soft"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/Author_Main_Pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-6dp"
            android:background="@drawable/add_schedule_fab_background"
            android:padding="16dp"
            android:src="@drawable/circle_blue" />

        <TextView
            android:id="@+id/Author_Main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toLeftOf="@+id/Author_Main_Pic"
            android:gravity="top|right"
            android:paddingBottom="@dimen/keyline_8dp"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Purple_Deep_Reverse"
            android:typeface="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/Purple_Deep_Black_fa7m"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/ad_space"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_new6" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/keyline_8dp"
                android:shadowColor="@color/Purple_Deep_Reverse"
                android:shadowDx="-1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/ad_space"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text__inverse" />

            <Button
                android:id="@+id/advertise_with_us"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/keyline_8dp"
                android:text="@string/advertise_with_us"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id" >
        </com.google.android.gms.ads.AdView>

        <ImageView
            android:id="@+id/removeAd"
            style="@style/ZadActionButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:alpha="0.9"
            android:padding="8dp"
            android:background="@drawable/add_schedule_fab_background"
            android:clickable="true"
            android:src="@drawable/ic_close" />
    </RelativeLayout>

</LinearLayout>