<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Card_back" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Card_back"
        android:paddingBottom="@dimen/keyline_24dp" >

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:clickable="true"
            android:maxHeight="150dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewLogo"
            android:background="@color/white"
            android:padding="28dp"
            android:text="@string/welcome_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text"
            android:layout_alignParentLeft="true" />

        <RelativeLayout
            android:id="@+id/relll1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyline_72dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="@dimen/keyline_16dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/website_Button"
                style="@style/ZadActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/keyline_16dp"
                android:clickable="true"
                android:src="@drawable/ic_about_website"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/keyline_16dp" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewx"
                android:layout_below="@+id/textViewx"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/website"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_hint"
                android:textStyle="normal"
                android:layout_alignRight="@+id/textViewx" />

            <TextView
                android:id="@+id/textViewx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/keyline_16dp"
                android:layout_marginEnd="@dimen/keyline_24dp"
                android:layout_toStartOf="@+id/website_Button"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/website_url"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/keyline_16dp"
                android:layout_marginRight="@dimen/keyline_24dp"
                android:layout_toLeftOf="@+id/website_Button" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/TextView01"
                android:background="@color/text_dividers"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/TextView01" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyline_72dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relll1"
            android:layout_marginTop="@dimen/keyline_16dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/about_email"
                style="@style/ZadActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/keyline_16dp"
                android:clickable="true"
                android:src="@drawable/ic_about_email"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/keyline_16dp" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TextView02"
                android:layout_below="@+id/TextView02"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/gmail"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_hint"
                android:textStyle="normal"
                android:layout_alignRight="@+id/TextView02" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/keyline_16dp"
                android:layout_marginEnd="@dimen/keyline_24dp"
                android:layout_toStartOf="@+id/about_email"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/gmail_url"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/keyline_16dp"
                android:layout_marginRight="@dimen/keyline_24dp"
                android:layout_toLeftOf="@+id/about_email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/TextView04"
                android:background="@color/text_dividers"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/TextView04" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyline_72dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RelativeLayout01"
            android:layout_marginTop="@dimen/keyline_16dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/about_facbook"
                style="@style/ZadActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/keyline_16dp"
                android:clickable="true"
                android:src="@drawable/ic_about_facebook"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/keyline_16dp" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TextView05"
                android:layout_below="@+id/TextView05"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/facebook_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_hint"
                android:textStyle="normal"
                android:layout_alignRight="@+id/TextView05" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/keyline_24dp"
                android:layout_toStartOf="@+id/about_facbook"
                android:linksClickable="true"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/facebook_url"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/keyline_24dp"
                android:layout_toLeftOf="@+id/about_facbook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/TextView06"
                android:background="@color/text_dividers"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/TextView06" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout03"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyline_72dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RelativeLayout02"
            android:layout_marginTop="@dimen/keyline_16dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/about_twitter"
                style="@style/ZadActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/keyline_16dp"
                android:clickable="true"
                android:src="@drawable/ic_about_twitter"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/keyline_16dp" />

            <TextView
                android:id="@+id/TextView09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TextViewTitter"
                android:layout_below="@+id/TextViewTitter"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/twitter_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_hint"
                android:textStyle="normal"
                android:layout_alignRight="@+id/TextViewTitter" />

            <TextView
                android:id="@+id/TextViewTitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/keyline_16dp"
                android:layout_marginEnd="@dimen/keyline_24dp"
                android:layout_toStartOf="@+id/about_twitter"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/twitter_url"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/keyline_16dp"
                android:layout_marginRight="@dimen/keyline_24dp"
                android:layout_toLeftOf="@+id/about_twitter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/TextView09"
                android:background="@color/text_dividers"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/TextView09" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout04"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyline_72dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RelativeLayout03"
            android:layout_marginTop="@dimen/keyline_16dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/about_googleplus"
                style="@style/ZadActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/keyline_16dp"
                android:clickable="true"
                android:src="@drawable/ic_about_googleplus"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/keyline_16dp" />

            <TextView
                android:id="@+id/TextView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TextView11"
                android:layout_below="@+id/TextView11"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/google_plus_name"
                android:layout_marginBottom="8dp"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_hint"
                android:textStyle="normal"
                android:layout_alignRight="@+id/TextView11" />

            <TextView
                android:id="@+id/TextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/keyline_16dp"
                android:layout_marginEnd="@dimen/keyline_24dp"
                android:layout_toStartOf="@+id/about_googleplus"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/google_plus_url"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/keyline_16dp"
                android:layout_marginRight="@dimen/keyline_24dp"
                android:layout_toLeftOf="@+id/about_googleplus" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/TextView12"
                android:background="@color/text_dividers"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/TextView12" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/privacy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/RelativeLayout04"
            android:layout_marginTop="@dimen/keyline_16dp"
            android:clickable="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/privacy_button"
                style="@style/ZadActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/keyline_16dp"
                android:src="@drawable/ic_about_website" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/privacy_button"
                android:paddingTop="@dimen/keyline_8dp"
                android:text="@string/privacy_policy"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text"
                android:textStyle="bold"

                android:layout_toLeftOf="@id/privacy_button" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>