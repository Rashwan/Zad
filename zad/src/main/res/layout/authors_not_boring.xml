<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/author_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <com.app.zad.helper.CollapsingImageLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/author_header_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_new6"
                android:focusableInTouchMode="true"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.9"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scrim_gradient"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/author_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:title=""/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/author_profile_image"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:layout_gravity="bottom|center_horizontal"
                tools:src="@color/theme_primary"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp"
                android:layout_marginBottom="96dp"
                />

                <TextView
                    android:id="@+id/author_profile_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barack obama"
                    android:layout_marginBottom="24dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="bottom|center"/>

        </com.app.zad.helper.CollapsingImageLayout>
    </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_author_quotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Card_back"
            android:paddingStart="@dimen/listView_padding"
            android:paddingEnd="@dimen/listView_padding"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

</android.support.design.widget.CoordinatorLayout>