<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Card_back"
    android:clipChildren="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/color_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewx"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/card_color_yellow" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="13dp"
           >

            <ImageButton
                android:id="@+id/imageViewLogo"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/fuckinlayout1"
                android:layout_marginEnd="150dp"
                android:layout_marginTop="-44dp"
                android:background="@drawable/triangle_normal"
                android:rotation="75" />

            <RelativeLayout
                android:id="@+id/fuckinlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="46dp"
                android:background="@drawable/card_bg"
                android:gravity="center" >

                <ScrollView
                    android:id="@+id/scrollViewMazag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/mazag_title"
                    android:layout_margin="@dimen/keyline_8dp"
                    android:clickable="true"
                    android:clipChildren="true" >

                    <TextView
                        android:id="@+id/mazag_quote"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_text"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.2"
                        android:maxLines="@integer/lines_numbers"
                        android:minLines="@integer/lines_numbers"
                    android:text="@string/loading"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey"
                        android:textStyle="bold" />
                </ScrollView>

                <TextView
                    android:id="@+id/mazag_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/scrollViewMazag"
                    android:gravity="center|start"
                    android:paddingBottom="16dp"
                    android:paddingStart="16dp"
                    android:text="@string/loading"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/brown" />

                <TextView
                    android:id="@+id/mazag_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/keyline_8dp"
                    android:gravity="center"
                    android:text="@string/mazag_quotes"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/yellow" />
                    <TextView
                    android:id="@+id/right_dot"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="5dp"
                    android:visibility="invisible"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle_red" />

                <TextView
                    android:id="@+id/left_dot"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:visibility="invisible"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle_red" />
                
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/fuckinlayout1"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/fuckinlayout1"
                android:layout_below="@+id/fuckinlayout1" >

                 <RelativeLayout
                     android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center" >

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/line_white"
                    android:thumb="@color/transparent" />

                <SeekBar
                    android:id="@+id/JoyStickController"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/line_transparent"
                    android:thumb="@drawable/seek__circle"
                    android:thumbOffset="15dp" />
            </RelativeLayout>

                <ImageView
                    android:id="@+id/Author_pic_mazag"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Author Image"
                    android:padding="8dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/faceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:background="@drawable/add_schedule_fab_background"
        android:padding="@dimen/keyline_16dp"
        android:src="@drawable/face_angry_bas" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/faceButton"
        android:layout_weight="0" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:baselineAligned="false"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="5"
                android:background="@drawable/card_bg"
                android:minHeight="@dimen/home_card_size" >

                <TextView
                    android:id="@+id/Random_quote_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/keyline_8dp"
                    android:gravity="center"
                    android:text="@string/random_quotes"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/yellow" />

                <RelativeLayout
                    android:id="@+id/todayoo2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/Refresh_button"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/Author_pic_random"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/Random_quote_Author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/Author_pic_random"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:paddingEnd="8dp"
                        android:text="@string/loading"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/brown" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/Refresh_button"
                    style="@style/ZadActionButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:src="@drawable/refresh" />

                <RelativeLayout
                    android:id="@+id/kokyna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/todayoo2"
                    android:layout_below="@+id/Random_quote_title"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/keyline_8dp"
                    android:gravity="center" >

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/Random_quote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_text"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.2"
                            android:minLines="3"
                            android:text="@string/loading"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/grey" />
                    </ScrollView>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="5"
                android:background="@drawable/card_bg"
                android:minHeight="@dimen/home_card_size" >

                <TextView
                    android:id="@+id/TodayQuote_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/keyline_8dp"
                    android:gravity="center"
                    android:text="@string/today_quote"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/yellow" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout02"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/Author_pic_today"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/Today_Author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/Author_pic_today"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:paddingEnd="8dp"
                        android:text="@string/loading"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/brown" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/today_scroll_laut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/RelativeLayout02"
                    android:layout_below="@+id/TodayQuote_Title"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/keyline_8dp"
                    android:gravity="center" >

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/TodayQuote"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_text"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.2"
                            android:minLines="3"
                            android:text="@string/loading"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/grey" />
                    </ScrollView>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="321dp"
            android:layout_height="182dp"
            android:background="@color/second_grey"
            android:visibility="gone" >

            <Button
                android:id="@+id/removeAd"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="85dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_grey"
                android:text="Sad" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/removeAd"
                android:layout_alignBottom="@+id/removeAd"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/removeAd"
                android:background="@drawable/circle_black"
                android:text="Afraid" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/Button01"
                android:layout_alignBottom="@+id/Button01"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/Button01"
                android:background="@drawable/circle_blue" />

            <Button
                android:id="@+id/Button03"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignStart="@+id/Button02"
                android:layout_below="@+id/Button02"
                android:layout_marginTop="25dp"
                android:background="@drawable/circle_blue" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/Button03"
                android:layout_alignBottom="@+id/Button03"
                android:layout_toStartOf="@+id/Button02"
                android:background="@drawable/circle_pink"
                android:text="loved" />

            <Button
                android:id="@+id/Button05"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/Button03"
                android:layout_alignBottom="@+id/Button03"
                android:layout_toStartOf="@+id/Button01"
                android:background="@drawable/circle_brown"
                android:text="Angry" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12.5dp"
                android:layout_toStartOf="@+id/Button05"
                android:background="@drawable/circle_yellow"
                android:text="happy" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/textViewx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>