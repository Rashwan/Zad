<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/transparent_white</item>
        <item name="sv_showcaseColor">@color/Purple_Deep</item>
        <item name="sv_buttonText">@string/next</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetailText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/Purple_Deep_Reverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomDetailText" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@color/Purple_Deep_Black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>